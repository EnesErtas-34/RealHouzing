@using RealHouzing.Consume.Models.CoLivingModels;
@model List<CoLivingListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Resim1</th>
        <th>Resim2</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CoLivingID</td>
            <td><img src="@item.ImageURL1" style="height:75px;width:75px" /></td>
            <td><img src="@item.ImageURL2" style="height:75px;width:75px" /></td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a href="/CoLiving/DeleteCoLiving/@item.CoLivingID" class="btn btn-danger">Sil</a></td>
            <td><a href="/CoLiving/UpdateCoLiving/@item.CoLivingID" class="btn btn-success">Güncelle</a></td>

        </tr>
    }
</table>
<br />
<a href="/CoLiving/AddCoLiving/" class="btn btn-primary">Yeni Yaşam Alanı Girişi</a>

