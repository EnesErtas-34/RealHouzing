@using RealHouzing.Consume.Models.AboutFeatureModels;
@model List<AboutFeatureListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Özellik</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutFeatureID</td>
            <td><img src="@item.ImageURL" style="height:75px;width:75px" /></td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Features</td>
            <td><a href="/AboutFeature/DeleteAboutFeature/@item.AboutFeatureID" class="btn btn-danger">Sil</a></td>
            <td><a href="/AboutFeature/UpdateAboutFeature/@item.AboutFeatureID" class="btn btn-success">Güncelle</a></td>

        </tr>
    }
</table>
<br />
<a href="/AboutFeature/AddAboutFeature/" class="btn btn-primary">Yeni Alan Girişi</a>

