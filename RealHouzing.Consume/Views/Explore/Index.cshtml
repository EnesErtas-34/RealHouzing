@using RealHouzing.Consume.Models.ExploreModels;
@model List<ExploreListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Ad</th>
        <th>Ikon</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ExploreID</td>
            <td><img src="@item.ImageURL" style="height:75px;width:75px" /></td>
            <td>@item.ExploreName</td>
            <td>@item.Icon</td>
            <td><a href="/Explore/DeleteExplore/@item.ExploreID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Explore/UpdateExplore/@item.ExploreID" class="btn btn-success">Güncelle</a></td>

        </tr>
    }
</table>
<br />
<a href="/Explore/AddExplore/" class="btn btn-primary">Yeni Mülk Girişi</a>

