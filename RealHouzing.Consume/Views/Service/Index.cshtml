@using RealHouzing.Consume.Models.ServiceModels;
@model List<ServiceListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Ikon</th>
        <th>Hizmet Adı</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceID</td>
            <td>@item.Title</td>
            <td>@item.Icon</td>
            <td>@item.ServiceName</td>
            <td>@item.Description</td>
            <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-success">Güncelle</a></td>

        </tr>
    }
</table>
<br />
<a href="/Service/AddService/" class="btn btn-primary">Yeni Hizmet Girişi</a>
