@using RealHouzing.Consume.Models.BlogModels;
@model List<BlogListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Yazar Resmi</th>
        <th>Yazar</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Blog Resmi</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BlogID</td>
            <td><img src="@item.WriterImage" style="height:75px;width:75px" /></td>
            <td>@item.Writer</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
			<td><img src="@item.BlogImage" style="height:75px;width:75px" /></td>
            <td>@item.Date</td>
            <td><a href="/Blog/DeleteBlog/@item.BlogID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Blog/UpdateBlog/@item.BlogID" class="btn btn-success">Güncelle</a></td>

        </tr>
    }
</table>
<br />
<a href="/Blog/AddBlog/" class="btn btn-primary">Yeni Blog Girişi</a>

