@using RealHouzing.Consume.Models.MyTeamModels;
@model List<MyTeamListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Ad Soyad</th>
        <th>Meslek</th>
        <th>Facebook</th>
        <th>Twitter</th>
        <th>Linkedin</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MyTeamID</td>
            <td><img src="@item.ImageURL" style="height:75px;width:75px" /></td>
            <td>@item.NameSurname</td>
            <td>@item.Job</td>
            <td>@item.Facebook</td>
            <td>@item.Twitter</td>
            <td>@item.Linkedin</td>
            <td><a href="/MyTeam/DeleteMyTeam/@item.MyTeamID" class="btn btn-danger">Sil</a></td>
            <td><a href="/MyTeam/UpdateMyTeam/@item.MyTeamID" class="btn btn-success">Güncelle</a></td>

        </tr>
    }
</table>
<br />
<a href="/MyTeam/AddMyTeam/" class="btn btn-primary">Yeni Takım Girişi</a>

